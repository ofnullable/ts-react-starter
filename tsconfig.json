{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "sourceMap": true,
    "jsx": "preserve",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules", "build", "dist"]
}
