{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "target": "esnext",
    "jsx": "react",
    "strict": true,
    "allowJs": false,
    "lib": ["dom", "dom.iterable", "esnext"],
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", "dist"]
}
